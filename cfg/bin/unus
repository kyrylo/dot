#!/usr/bin/env sh

# Use laptop screen only.
if [ $HOSTNAME = "x220" ]
then
    xrandr --output LVDS1 --mode 1366x768 --primary --output DP1 --off
else
    xrandr --output LVDS1 --mode 1280x800 --primary --output HDMI1 --off
    subtler --restart
    feh --bg-scale ~/Dropbox/pictures/wallpapers/wallpaper.jpg
fi
