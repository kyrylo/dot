pkgname=kdm-theme-already-awake
pkgver=0.1.0
pkgrel=1
pkgdesc="KDM4 theme with white background and red text"
arch=('i686' 'x86_64')
url="http://kde-look.org/content/show.php/Already+awake%3F?content=140118"
license=('MIT License')
md5sums=('8efdd38a4e93fbc7a34263826502c2c2')
source=(http://kde-look.org/CONTENT/content-files/140118-already%20awake-0.1.0.tar.gz)
build() {

  cd ${startdir}/src/
  mkdir -p $pkgdir/usr/share/apps/kdm/themes
  mv already\ awake/ $pkgdir/usr/share/apps/kdm/themes

}
