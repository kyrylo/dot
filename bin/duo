#!/usr/bin/env sh
# Kyrylo Silin -->
#                 https://github.com/kyrylo/dot
#                                              <-- kyrylosilin@gmail.com
#
# Use a laptop screen and an additional monitor (laptop screen is primary).
xrandr --newmode "2560x1440_30.00"  146.27  2560 2680 2944 3328  1440 1441 1444 1465  -HSync +Vsync
xrandr --addmode HDMI1 2560x1440_30.00
xrandr --output LVDS1 --off
xrandr --output LVDS1 --primary --mode 1280x800 --right-of HDMI1 --output HDMI1 --mode 2560x1440_30.00
subtler --restart
feh --bg-scale ~/Dropbox/pictures/wallpapers/wallpaper.jpg
